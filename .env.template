        "summarizer": {
            "model": "gpt-3.5-turbo",
            "api_key": "sk-xxx",
            "api_base": "https://api.openai.com/v1"
        }
    },
    {
        "config_id": "eth-real",
        "symbol": "ETH/USDT",
